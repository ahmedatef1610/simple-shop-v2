<%- include("parts/header") %>

<%- include("parts/navbar") %>


<div class="container py-3">
    <h2 class="mb-5">Login</h2>

    <% if(authError) { %>
    <p class="alert alert-danger my-3">
        <%= authError%>
    </p>
    <% } %>

    <form action="/auth/login" method="POST">
        <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="E-mail">
            <% let emailError = validationErrors.find(err => err.param === 'email') %>
            <% if (emailError) { %>
            <small class="form-text text-muted"><%= emailError.msg %></small>
            <% } %>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
            <% let passwordError = validationErrors.find(err => err.param === 'password') %>
            <% if (passwordError) { %>
            <small class="form-text text-muted"><%= passwordError.msg %></small>
            <% } %>
        </div>
        <input type="submit" value="Login" class="btn btn-primary btn-block">
    </form>

    <div class="text-center mt-3">
        Don't have account ? <a href="/auth/signup">Create Account</a>
    </div>
</div>


<%- include("parts/footer") %>